#include "fonction.h"
#include <stdio.h>
void choixNom(char nom[10])
{
printf("entrer votre nom : ");
    scanf("%s", nom);
}

int choixPion(int a)
{
    printf("taper un nombre pour choisir un pion parmis les suivants :\n 1.Le coeur\n 2.Le carreau\n 3. Le trèfle\n 4.Le pic\n ");
    scanf("%d", &a);
    while(a<1 || a>4)
    {
        printf("veuillez choisir une valeur valide parmis :\n 1.Le coeur\n 2.Le carreau\n 3. Le trèfle\n 4.Le pic\n ");
        scanf("%d", &a);
    }

    if (a == 1)
    {
        printf("vous avez choisis :%c",3);
    }
    else if (a == 2)
    {
        printf("vous avez choisis :%c",4);
    }
    else if (a == 3)
    {
        printf("vous avez choisis :%c",5);
    }
    else if (a == 4)
    {
        printf("vous avez choisis :%c",6);
    }

}
