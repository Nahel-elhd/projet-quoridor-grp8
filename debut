#include <stdio.h>
#include"fonction.h"
int main(void)
{
    int nbr_joueur;
    char j1[10];
    char j2[10];
    char j3[10];
    char j4[10];
    int pionJ1;

    printf("choisissez le nombre de joueur humain (1 à 4 max) :\n");
    scanf("%d",&nbr_joueur);

    switch (nbr_joueur)
    {
        case 1:
            choixNom(j1);
            printf("Le joueur 1 est : %s\n",j1);
            printf("Le joueur 2 est : IA2\n");
            choixPion(pionJ1);

            break;
        case 2:
            choixNom(j1);
            choixNom(j2);
            printf("Le joueur 1 est : %s\n",j1);
            printf("Le joueur 2 est : %s\n",j2);
            break;
        case 3:
            choixNom(j1);
            choixNom(j2);
            choixNom(j3);
            printf("Le joueur 1 est : %s\n",j1);
            printf("Le joueur 2 est : %s\n",j2);
            printf("Le joueur 3 est : %s\n",j3);
            printf("Le joueur 4 est : IA4\n");
            break;
        case 4:
            choixNom(j1);
            printf("Le joueur 1 est : %s\n",j1);
            choixNom(j2);
            printf("Le joueur 2 est : %s\n",j2);
            choixNom(j3);
            printf("Le joueur 3 est : %s\n",j3);
            choixNom(j4);
            printf("Le joueur 4 est : %s\n",j4);
            break;
        default:
            printf("ERREUR\n");
            break;
    }


    return 0;
}
